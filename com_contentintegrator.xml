<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade" version="5.0">
    <name>ContentIntegrator</name>
    <author>Algan</author>
    <version>1.0.1</version>
    <description>COM_CONTENTINTEGRATOR_XML_DESCRIPTION</description>
    <scriptfile>script.php</scriptfile>
    <administration folder="administrator">
        <menu>COM_CONTENTINTEGRATOR_TITLE</menu>
        <files folder="administrator/components/com_contentintegrator">
            <filename>contentintegrator.php</filename>
            <folder>services</folder>
            <folder>src</folder>
        </files>
        <config>config.xml</config>
        <languages>
            <language tag="en-GB">administrator/language/en-GB/en-GB.com_contentintegrator.ini</language>
            <language tag="en-GB">administrator/language/en-GB/en-GB.com_contentintegrator.sys.ini</language>
            <language tag="de-DE">administrator/language/de-DE/de-DE.com_contentintegrator.ini</language>
            <language tag="de-DE">administrator/language/de-DE/de-DE.com_contentintegrator.sys.ini</language>
        </languages>
        <services>
            <service type="provider">services/provider.php</service>
        </services>
        <namespace path="administrator/components/com_contentintegrator/src">
            Joomla\Component\Contentintegrator
        </namespace>
    </administration>
    <media folder="media/com_contentintegrator" destination="com_contentintegrator">
        <folder>css</folder>
        <folder>js</folder>
    </media>
</extension>
