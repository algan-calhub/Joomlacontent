<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade" version="5.0">
    <name>ContentIntegrator</name>
    <author>Algan</author>
    <version>1.0.0</version>
    <description>COM_CONTENTINTEGRATOR_XML_DESCRIPTION</description>
    <administration>
        <menu>COM_CONTENTINTEGRATOR_TITLE</menu>
        <files folder="admin">
            <filename>com_contentintegrator.php</filename>
            <filename>config.xml</filename>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>language</folder>
            <folder>services</folder>
        </files>
        <config>config.xml</config>
        <languages folder="language">
            <language tag="en-GB">en-GB/en-GB.com_contentintegrator.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_contentintegrator.sys.ini</language>
            <language tag="de-DE">de-DE/de-DE.com_contentintegrator.ini</language>
            <language tag="de-DE">de-DE/de-DE.com_contentintegrator.sys.ini</language>
        </languages>
        <services>
            <service type="provider">services/provider.php</service>
        </services>
    </administration>
    <media folder="media/com_contentintegrator" destination="com_contentintegrator">
        <folder>css</folder>
        <folder>js</folder>
    </media>
</extension>
