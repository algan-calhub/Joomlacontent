<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" client="administrator" version="5.0">
    <name>ContentIntegrator</name>
    <author>Algan</author>
    <creationDate>2025-08-06</creationDate>
    <element>com_contentintegrator</element>
    <version>1.0.1</version>
    <description>COM_CONTENTINTEGRATOR_XML_DESCRIPTION</description>
    <scriptfile>administrator/components/com_contentintegrator/script.php</scriptfile>
    <administration folder="administrator">
        <menu>Content Integrator</menu>
        <files folder="administrator/components/com_contentintegrator">
            <filename>com_contentintegrator.php</filename>
            <filename>contentintegrator.php</filename>
            <filename>script.php</filename>
            <filename>config.xml</filename>
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>sql</folder>
        </files>
        <config>config.xml</config>
        <languages>
            <language tag="en-GB">language/en-GB/en-GB.com_contentintegrator.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_contentintegrator.sys.ini</language>
            <language tag="de-DE">language/de-DE/de-DE.com_contentintegrator.ini</language>
            <language tag="de-DE">language/de-DE/de-DE.com_contentintegrator.sys.ini</language>
        </languages>
        <services>
            <service type="provider">services/provider.php</service>
        </services>
        <namespace path="administrator/components/com_contentintegrator/src">
            Joomla\Component\Contentintegrator\Administrator
        </namespace>
    </administration>
    <media destination="com_contentintegrator" folder="media/com_contentintegrator">
        <folder>css</folder>
        <folder>js</folder>
        <folder>images</folder>
    </media>
    <install>
        <sql folder="sql" driver="mysql">install.mysql.utf8.sql</sql>
    </install>
</extension>
